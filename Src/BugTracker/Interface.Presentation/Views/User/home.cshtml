@model IEnumerable<BugTracker.Domain.Entity.Application>

@{
    ViewBag.Title = "home";
}
<html>
<body>

    <div class="panel panel-success col-md-7 box">
        <div class="panel-heading">
            <h4>Your applications:</h4>
        </div>
        <div class="panel-body">
            <div class="row">
                
                <form action="~/User/Search/" method="post">
                    <input type="text" class="form-control" name="name" placeholder="App name...">
                    <input href="~/User/Search/" class="btn btn-success col-sm-2 glyphicon glyphicon-zoom-in" type="submit" value="Search"/>
                </form>
               
                <a href="~/Application/RegisterApp/" class="btn btn-success col-sm-2">New App</a>
            </div>
            <table class="table table-striped table-hover ">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>App Name</th>
                        <th>Last Track</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="~/Content/Images/Application/@Html.DisplayFor(model => item.Image)" class="icon list" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @if (item.BugTrackers != null && item.BugTrackers.Count > 0)
                                {
                                 @Html.DisplayFor(modelItem => item.BugTrackers.Last().Description)
                                }
                            </td>
                            <td>
                                @if (item.BugTrackers != null && item.BugTrackers.Count > 0)
                                {
                                    @Html.DisplayFor(modelItem => item.BugTrackers.Last().OccurredDate)
                                }
                            </td>
                            <td><a href="~/Application/DetailsApp/@item.IDApplication" class="glyphicon glyphicon-th-list" alt="Detalhes"></a></td>
                            <td><a href="~/Application/RegisterApp/@item.IDApplication" class="glyphicon glyphicon-pencil" alt="Editar"></a></td>
                            <td><a href="~/Application/DeleteApp/@item.IDApplication" class="glyphicon glyphicon-trash" alt="Exlcuir"></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
    <div class="panel panel-success col-md-4 box">
        <div class="panel-heading">
            <h4>Bugs:</h4>
        </div>
        <div class="panel-body">
            <table class="table table-hover ">
                <thead>
                    <tr>
                        <th>App Name</th>
                        <th>Date - 20/06/16</th>
                        <th>Today</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><a href="#">FakeBook</a></td>
                        <td><span class="glyphicon glyphicon-alert errors"></span>  02</td>
                        <td><span class="glyphicon glyphicon-alert errors"></span>  05</td>
                    </tr>
                    <tr>
                        <td><a href="#">FakeBook</a></td>
                        <td><span class="glyphicon glyphicon-alert warnings"></span> 5</td>
                        <td><span class="glyphicon glyphicon-alert warnings"></span> 12</td>
                    </tr>
                    <tr>
                        <td><a href="#">Xml Reader</a></td>
                        <td><span class="glyphicon glyphicon-alert errors"></span> 5</td>
                        <td><span class="glyphicon glyphicon-alert errors"></span> 12</td>
                    </tr>
                    <tr>
                        <td><a href="#">Xml Reader</a></td>
                        <td><span class="glyphicon glyphicon-alert warnings"></span> 5</td>
                        <td><span class="glyphicon glyphicon-alert warnings"></span> 12</td>
                    </tr>
                </tbody>
                </table>
        </div>
    </div>

    <script src="../Scripts/Custom/graphics/graphics.js"></script>
    

</body>
</html>